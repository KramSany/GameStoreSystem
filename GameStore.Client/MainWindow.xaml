<Window x:Class="GameStore.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStore.Client"
        mc:Ignorable="d"
       Title="GameStore" Height="700" Width="1200"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="CanResizeWithGrip"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="#2A475E"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1B2838"/>
            <Setter Property="Foreground" Value="#C7D5E0"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A475E"/>
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GameCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1B2838"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A475E"/>
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#171A21" CornerRadius="15" Margin="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1B2838" CornerRadius="15,15,0,0" 
                    Height="40" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="🎮 GameStore" 
                              Foreground="#66C0F4" FontSize="18" FontWeight="Bold"
                              VerticalAlignment="Center" Margin="15,0"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="─" Width="40" Height="25" Margin="2"
                                Style="{StaticResource ModernButton}" Click="MinimizeButton_Click"/>
                        <Button Content="✕" Width="40" Height="25" Margin="2" 
                                Style="{StaticResource ModernButton}" Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Боковая панель -->
                <Border Grid.Column="0" Style="{StaticResource ModernCard}">
                    <StackPanel>
                        <TextBlock Text="Меню" Foreground="#66C0F4" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                        <Button Content="🏠 Главная" Style="{StaticResource ModernButton}" 
                                Click="HomeButton_Click" Margin="0,5"/>
                        <Button Content="🎮 Все игры" Style="{StaticResource ModernButton}" 
                                Click="GamesButton_Click" Margin="0,5"/>
                        <Button Content="📚 Моя библиотека" Style="{StaticResource ModernButton}" 
                                Click="LibraryButton_Click" Margin="0,5"/>
                        <Button Content="👤 Профиль" Style="{StaticResource ModernButton}" 
                                Click="ProfileButton_Click" Margin="0,5"/>

                        <!-- Информация о пользователе -->
                        <Border Style="{StaticResource ModernCard}" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="👤 Пользователь" Foreground="#C7D5E0" FontSize="12"/>
                                <TextBlock x:Name="UserNameText" Text="Не авторизован" 
                                          Foreground="#66C0F4" FontSize="14" FontWeight="Bold"/>
                                <TextBlock x:Name="BalanceText" Text="Баланс: 0 ₽" 
                                          Foreground="#90BA3C" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Основная область контента -->
                <Border Grid.Column="1" Style="{StaticResource ModernCard}" Margin="15,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                   VerticalAlignment="Top" Margin="0,0,0,15">
                            <TextBlock x:Name="ContentTitle" Text="🎮 Все игры" 
                                      Foreground="#C7D5E0" FontSize="20" FontWeight="Bold"
                                      VerticalAlignment="Center"/>

                            <TextBox x:Name="SearchTextBox" Width="200" Height="30" 
                                    Margin="15,0,0,0" Padding="10,0"
                                    Background="#1B2838" Foreground="#C7D5E0"
                                    BorderBrush="#66C0F4" BorderThickness="1"
                                    FontSize="12"
                                    TextChanged="SearchTextBox_TextChanged"
                                    VerticalContentAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Foreground" Value="#6B8BA4"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Список игр -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="GamesItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource GameCardStyle}" 
                                                Width="180" Height="220">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="100"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Изображение игры, пока без них-->
                                                <Border Grid.Row="0" Background="#2A475E" 
                                                        CornerRadius="8,8,0,0">
                                                    <Image Source="/Assets/game_placeholder.png" 
                                                           Stretch="UniformToFill"/>
                                                </Border>

                                                <StackPanel Grid.Row="1" Margin="8">
                                                    <TextBlock Text="{Binding GameName}" 
                                                              Foreground="#C7D5E0" FontWeight="Bold"
                                                              TextWrapping="Wrap" MaxHeight="40"/>
                                                    <TextBlock Text="{Binding Genre}" 
                                                              Foreground="#66C0F4" FontSize="11"
                                                              Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <Border Grid.Row="2" Background="#1B2838" 
                                                        CornerRadius="0,0,8,8" Padding="8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                  Text="{Binding Price, StringFormat={}{0} ₽}"
                                                                  Foreground="#90BA3C" FontWeight="Bold"
                                                                  VerticalAlignment="Center"/>

                                                        <Button Grid.Column="1" Content="Купить"
                                                                Background="#90BA3C" Foreground="White"
                                                                BorderThickness="0"
                                                                Padding="8,4" FontSize="10"
                                                                Click="BuyButton_Click"/>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="#1B2838" CornerRadius="0,0,15,15" 
                    Height="30" VerticalAlignment="Bottom">
                <TextBlock x:Name="StatusText" Text="Готов к работе..." 
                          Foreground="#6B8BA4" FontSize="11"
                          VerticalAlignment="Center" Margin="15,0"/>
            </Border>
        </Grid>
    </Border>
</Window>
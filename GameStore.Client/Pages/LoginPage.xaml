<Page x:Class="GameStore.Client.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameStore.Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Background="#171A21"
      Title="LoginPage">

    <Page.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="#2A475E"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1B2838"/>
            <Setter Property="Foreground" Value="#C7D5E0"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#90BA3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#1B2838"/>
            <Setter Property="Foreground" Value="#C7D5E0"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#90BA3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1B2838"/>
            <Setter Property="Foreground" Value="#C7D5E0"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A475E"/>
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#90BA3C"/>
            <Setter Property="Foreground" Value="#171A21"/>
            <Setter Property="BorderBrush" Value="#90BA3C"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Page.Resources>

    <Grid>
        
        <Ellipse Width="300" Height="300" Fill="#66C0F4" Opacity="0.1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-100,-100,0,0"/>
        <Ellipse Width="200" Height="200" Fill="#90BA3C" Opacity="0.1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-50,-50"/>

        
        <Border Style="{StaticResource ModernCard}" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="400" Height="500">

            <StackPanel>
                
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="🎮" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="GameStore" Foreground="#66C0F4" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Добро пожаловать!" Foreground="#C7D5E0" FontSize="16" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

               
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Логин" Foreground="#C7D5E0" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox x:Name="LoginTextBox" 
             Style="{StaticResource ModernTextBox}" />

                    <TextBlock Text="Пароль" Foreground="#C7D5E0" FontSize="12" Margin="0,10,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                 Style="{StaticResource ModernPasswordBox}"
                 PasswordChar="•"
                 KeyDown="PasswordBox_KeyDown"/>
                </StackPanel>

                
                <StackPanel>
                    <Button x:Name="LoginButton" 
                            Content="Войти" 
                            Style="{StaticResource PrimaryButton}"
                            Click="LoginButton_Click"
                            Height="45"
                            FontSize="16"/>

                    <TextBlock Text="или" Foreground="#6B8BA4" HorizontalAlignment="Center" Margin="0,15,0,15"/>

                    <Button x:Name="RegisterButton"
                            Content="Создать аккаунт"
                            Style="{StaticResource ModernButton}"
                            Click="RegisterButton_Click"/>

                    
                    <Button x:Name="TestApiButton"
                            Content="🔧 Тест подключения к API"
                            Style="{StaticResource ModernButton}"
                            Click="TestApiButton_Click"
                            Margin="0,20,0,0"
                            Background="#2A475E"/>
                </StackPanel>

                
                <Border Background="#1B2838" Margin="0,20,0,0" Padding="10" CornerRadius="5">
                    <TextBlock x:Name="StatusText" 
                              Text="Готов к входу..." 
                              Foreground="#6B8BA4" 
                              FontSize="11"
                              TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>


</Page>

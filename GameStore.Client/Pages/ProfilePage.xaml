<Page x:Class="GameStore.Client.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Background="Transparent"
      Title="ProfilePage">

    <Page.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="#2A475E"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="ProfileField" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ProfileLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#C7D5E0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ProfileValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#66C0F4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="BalanceBadge" TargetType="Border">
            <Setter Property="Background" Value="#90BA3C"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1B2838"/>
            <Setter Property="Foreground" Value="#C7D5E0"/>
            <Setter Property="BorderBrush" Value="#66C0F4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A475E"/>
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <Border Style="{StaticResource ModernCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border Width="80" Height="80" Background="#66C0F4" CornerRadius="40">
                            <TextBlock Text="👤" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="ProfileUserName" Text="Пользователь" 
                                      Foreground="#66C0F4" FontSize="24" FontWeight="Bold"/>
                            <TextBlock Text="Участник GameStore" 
                                      Foreground="#C7D5E0" FontSize="14" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    
                    <Border Style="{StaticResource BalanceBadge}">
                        <TextBlock x:Name="ProfileBalance" Text="Баланс: 0 ₽" 
                                  Foreground="#171A21" FontSize="16" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Border>


            <Border Style="{StaticResource ModernCard}">
                <StackPanel>
                    <TextBlock Text="📊 Основная информация" 
                              Foreground="#66C0F4" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <StackPanel Style="{StaticResource ProfileField}">
                                <TextBlock Text="Логин" Style="{StaticResource ProfileLabel}"/>
                                <TextBlock x:Name="ProfileLogin" Text="-" Style="{StaticResource ProfileValue}"/>
                            </StackPanel>

                            <StackPanel Style="{StaticResource ProfileField}">
                                <TextBlock Text="ID пользователя" Style="{StaticResource ProfileLabel}"/>
                                <TextBlock x:Name="ProfileUserId" Text="-" Style="{StaticResource ProfileValue}"/>
                            </StackPanel>

                            <StackPanel Style="{StaticResource ProfileField}">
                                <TextBlock Text="Дата регистрации" Style="{StaticResource ProfileLabel}"/>
                                <TextBlock x:Name="ProfileRegisterDate" Text="-" Style="{StaticResource ProfileValue}"/>
                            </StackPanel>
                        </StackPanel>

                        
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <StackPanel Style="{StaticResource ProfileField}">
                                <TextBlock Text="Статус аккаунта" Style="{StaticResource ProfileLabel}"/>
                                <Border Background="#2A475E" CornerRadius="10" Padding="8,4" HorizontalAlignment="Left">
                                    <TextBlock Text="Активен" Foreground="#90BA3C" FontWeight="Bold" FontSize="12"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Style="{StaticResource ProfileField}">
                                <TextBlock Text="Уровень аккаунта" Style="{StaticResource ProfileLabel}"/>
                                <TextBlock Text="Обычный" Foreground="#C7D5E0" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            
            <Border Style="{StaticResource ModernCard}">
                <StackPanel>
                    <TextBlock Text="📈 Статистика" 
                              Foreground="#66C0F4" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        
                        <Border Style="{StaticResource ModernCard}" Margin="5">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🎮" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="GamesCount" Text="0" 
                                          Foreground="#66C0F4" FontSize="20" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="игр в библиотеке" 
                                          Foreground="#C7D5E0" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        
                        <Border Style="{StaticResource ModernCard}" Margin="5">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TotalSpent" Text="0 ₽" 
                                          Foreground="#90BA3C" FontSize="20" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="всего потрачено" 
                                          Foreground="#C7D5E0" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        
                        <Border Style="{StaticResource ModernCard}" Margin="5">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="📅" FontSize="24" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="LastActivity" Text="Сегодня" 
                                          Foreground="#C7D5E0" FontSize="16" FontWeight="Bold" 
                                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <TextBlock Text="последняя активность" 
                                          Foreground="#C7D5E0" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            
            <Border Style="{StaticResource ModernCard}">
                <StackPanel>
                    <TextBlock Text="⚡ Быстрые действия" 
                              Foreground="#66C0F4" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="💳 Пополнить баланс" 
                                Style="{StaticResource ModernButton}" 
                                Click="AddBalanceButton_Click"
                                Margin="5" Padding="20,10"/>

                        <Button Content="🛒 История покупок" 
                                Style="{StaticResource ModernButton}" 
                                Click="PurchaseHistoryButton_Click"
                                Margin="5" Padding="20,10"/>

                        <Button Content="⚙️ Настройки" 
                                Style="{StaticResource ModernButton}" 
                                Click="SettingsButton_Click"
                                Margin="5" Padding="20,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>